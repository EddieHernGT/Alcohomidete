<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activities.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/configurationTitle"
                  android:text="Account Settings"
                  android:textSize="40dp"
                  android:layout_margin="30dp"
                  android:textColor="@color/ligth_orange"
                  android:layout_height="wrap_content"/>
        <GridLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_margin="60dp"
                android:layout_below="@+id/configurationTitle">
            <EditText
                    android:layout_width="250dp"
                    android:id="@+id/Name"
                    android:textColor="@color/ligth_orange"
                    android:layout_column="0"
                    android:textColorHint="@color/ligth_orange"
                    android:backgroundTint="@color/ligth_orange"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" android:hint="Name"
            />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/EditName"
                    android:layout_column="1"
                    android:background="@color/ligth_orange"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_edit"
                    android:layout_height="wrap_content" android:layout_row="0"
                    tools:ignore="SpeakableTextPresentCheck" android:minWidth="48dp" android:minHeight="48dp"/>
            <EditText
                    android:layout_width="250dp"
                    android:id="@+id/userName"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/ligth_orange"
                    android:backgroundTint="@color/ligth_orange"
                    android:textColor="@color/ligth_orange"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" android:hint="User Name"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/EditUser"
                    android:layout_column="1"
                    android:layout_alignParentRight="true"
                    android:background="@color/ligth_orange"
                    android:src="@drawable/ic_edit"
                    android:layout_marginTop="10dp"

                    android:layout_height="wrap_content"
                    android:layout_row="1" tools:ignore="SpeakableTextPresentCheck" android:minWidth="48dp"
                    android:minHeight="48dp"/>
            <EditText
                    android:layout_width="250dp"
                    android:id="@+id/userEmail"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/ligth_orange"
                    android:backgroundTint="@color/ligth_orange"
                    android:textColor="@color/ligth_orange"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" android:minHeight="48dp" android:hint="Email"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/EditEmail"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/ligth_orange"
                    android:src="@drawable/ic_edit"
                    android:layout_height="wrap_content"
                    android:layout_row="3" android:minWidth="48dp" android:minHeight="48dp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            <EditText
                    android:layout_width="250dp"
                    android:id="@+id/userPassword"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/ligth_orange"
                    android:backgroundTint="@color/ligth_orange"
                    android:textColor="@color/ligth_orange"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Password"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/EditPassword"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/ligth_orange"
                    android:src="@drawable/ic_edit"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

        </GridLayout>

    </RelativeLayout>

</FrameLayout>